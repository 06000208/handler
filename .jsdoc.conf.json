{
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc"]
    },
    "source": {
        "include": ["."],
        "exclude": ["node_modules", "views", "docs", ".vscode", ".github", "public/oldjs"],
        "includePattern": "\\.js$"
    },
    "plugins": ["plugins/markdown"],
    "markdown": {
        "tags": ["todo"]
    },
    "opts": {
        "destination": "./docs/",
        "encoding": "utf8",
        "private": true,
        "recurse": true,
        "readme": "README.md"
    }
}